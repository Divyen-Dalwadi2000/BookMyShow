<div class="container-fluid">
    <div class="d-flex justify-content-center">
        <%= form_with model: @movie  do |f| %>
            <div class="form-group">
                <%= f.label :image %>
                <%= f.file_field :image, class: "form-control" %>
                <%  @movie.errors.full_messages_for(:image).each do |m| %>  
                    <span style="color: red;"><%= m %></span>
                <% end %>
            </div>
            <div class="form-group">
                
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control" %>
                <%  @movie.errors.full_messages_for(:name).each do |m| %>
                    <span style="color: red;"><%= m %></span>
                <% end %>
            </div>
            <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, class: "form-control" %>
                <%  @movie.errors.full_messages_for(:description).each do |m| %>
                    <span style="color: red;"><%= m %></span>
                <% end %>
            </div>
            <div class="form-group">
                <%= f.label :release_date %>
                <%= f.date_field :release_date, class: "form-control" %>
                <%  @movie.errors.full_messages_for(:release_date).each do |m| %>
                    <span style="color: red;"><%= m %></span>
                <% end %>
            </div>
            <div class="form-group">
                <%= f.label :duration_hour %>
                <%= f.number_field :duration_hour, class: "form-control" %>
                <%  @movie.errors.full_messages_for(:duration_hour).each do |m| %>
                    <span style="color: red;"><%= m %></span>
                <% end %>
            </div>
            <div class="form-group">
                <%= f.label :duration_minute %>
                <%= f.number_field :duration_minute, class: "form-control" %>
                <%  @movie.errors.full_messages_for(:duration_minute).each do |m| %>
                    <span style="color: red;"><%= m %></span>
                <% end %>
            </div>
            <div class="form-group mt-2">
                <%= f.submit class: "form-control btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>