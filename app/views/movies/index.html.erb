
<% @movies.each_slice(4) do |movie_slice| %>
  <div class="album py-5">
    <div class="container">
      <div class="row">
        <% movie_slice.each do |m| %>
          <div class="col-md-3 "> <!-- Use col-md-3 for 4 cards in a row -->
            <div class="card mb-4 box-shadow"  style="border: none; border-radius:20px">
                <!--  here we add a clickable card to see a show page  --> 
                <%= link_to movie_path(m) , style: "text-decoration: none" do %>
                    <%= image_tag(m.image, class: "card-img-top rounded", style: "width: 100%; display: block;") %>
                    <div class="card-body">
                        <h5 class="card-text"><%= m.name %></h5>
                        <h6 class="card-text"><%= m.description %></h6>
                    </div>    
                <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
